<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"            xmlns:tools="http://schemas.android.com/tools"            xmlns:app="http://schemas.android.com/apk/res-auto"            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@drawable/regsc"
>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ForgotPassword"
            android:padding="20dp">

        <TextView
                android:id="@+id/ft1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/purple_700"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Trouble logging in?"
                style="@style/TextAppearance.MaterialComponents.Caption"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/ft1"
                android:text="Reset your password"
                style="@style/TextAppearance.MaterialComponents.Caption"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reset1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/resetbtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Send Reset link"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/reset"
                android:layout_marginTop="30dp"
                android:textAllCaps="false" tools:ignore="OnClick"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/remember"
                  android:text="Remember Password? Login"
                  android:layout_below="@+id/resetbtn"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/white"
                  android:padding="5dp"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  style="@style/TextAppearance.MaterialComponents.Caption"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/create"
                  android:text="Create new account"
                  android:layout_marginTop="120sp"
                  android:layout_alignParentBottom="true"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/white"
                  android:padding="5dp"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  style="@style/TextAppearance.MaterialComponents.Caption"/>


    </RelativeLayout>
</ScrollView>
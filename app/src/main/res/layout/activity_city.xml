<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        android:id="@+id/cityid"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".City"
        android:background="@drawable/regsc">

<!--    <fragment android:id="@+id/myMap"-->
<!--              android:layout_width="match_parent"-->
<!--              android:layout_height="match_parent"-->
<!--              android:name="com.google.android.gms.maps.SupportMapFragment"/>-->


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="10dp"/>

    <ImageView android:id="@+id/mapImg"
               android:layout_width="330dp"
               android:layout_height="230dp"
               android:layout_marginLeft="30dp"
               android:src="@drawable/plc"
               android:layout_marginTop="60dp"/>


    <TextView android:id="@+id/mapText"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="Places"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="160dp"
              android:gravity="center"
              android:textSize="30sp"/>

    <ImageView android:id="@+id/placesImg"
               android:layout_width="330dp"
               android:layout_height="230dp"
               android:layout_marginLeft="30dp"
               android:src="@drawable/mps"
                android:layout_marginTop="260dp"/>


    <TextView android:id="@+id/placesText"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="Map"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:layout_marginTop="350dp"
              android:gravity="center"
              android:textSize="30sp"/>

    <ImageView android:layout_width="330dp"
               android:layout_height="230dp"
               android:layout_marginLeft="30dp"
               android:src="@drawable/wada"
               android:layout_marginTop="470dp"/>


    <TextView android:id="@+id/infoText"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="City Information"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:layout_marginTop="550dp"
              android:gravity="center"
              android:textSize="30sp"/>
</RelativeLayout>

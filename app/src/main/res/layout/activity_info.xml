<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@drawable/regsc"
>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Info"
        android:padding="10dp">

    <TextView android:id="@+id/pune_id"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:text="Pune"
    android:textSize="40sp"
    android:gravity="center"
    android:textColor="@color/black"/>

    <ImageView
            android:id="@+id/log_out"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:src="@drawable/person"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="340dp"/>

    <ImageView android:id="@+id/iv1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/wada"/>

    <TextView android:id="@+id/infm"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pune is the second largest city of Maharashtra state, India and is surrounded by the Sahyadri Mountain range. It occupied an important place during the Maratha Empire between 1674 and 1881. Hence, it homes numerous forts and wadas highlighting typical Maratha architecture.Forts are one of the main attractions including Lohagad and Visapur Forts. It also has rich cultural and spiritual history with many temples and ashrams spread across the city. In additional to local adventure and history junkies, Pune also attracts many international tourist because of Osho International Meditation Resort that is located in heart of Pune at Koregaon Park."
              android:textSize="20sp"
              android:layout_below="@+id/iv1"
              android:gravity="center"
              android:background="@color/white"
              android:textColor="@color/black"/>
</RelativeLayout>
</ScrollView>
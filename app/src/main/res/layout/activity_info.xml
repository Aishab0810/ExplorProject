<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".Dashboard.Info">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_700"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
    />

    <TextView android:id="@+id/pune_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pune History"
              android:gravity="center"
              android:textStyle="bold"
              android:textSize="30sp"
              android:textColor="@color/purple_700"
              android:layout_marginTop="280sp"/>

    <ImageView
            android:id="@+id/homee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="300dp"/>

    <ImageView
            android:id="@+id/log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"/>

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/histg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/roadtrip"
            android:layout_marginTop="-30dp"
    />

        <HorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/layoutid"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="340dp"
                          android:orientation="horizontal"
            >

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mdam" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/lfort" />

    <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/kdam" />

    <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mhill" />

    <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rfort" />

    <ImageView
            android:id="@+id/imageView13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tighill" />

            </LinearLayout>
        </HorizontalScrollView>


    <TextView android:id="@+id/infm"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/history"
              android:textSize="18sp"
              android:layout_marginTop="450dp"
              android:gravity="center"
              android:scrollbars = "vertical"
              android:textColor="@color/purple_700"
              android:textStyle="bold"/>
</RelativeLayout>

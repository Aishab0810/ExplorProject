<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".HillStations">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView android:layout_width="380dp" android:layout_height="280dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
                                       app:cardCornerRadius="4dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ht1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Tiger Hill Lonavala         Dist-60Km from pune"/>

    <ImageView android:layout_width="350dp" android:layout_height="250dp"
                android:id="@+id/hi1"
                android:src="@drawable/tighill"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="380dp" android:layout_height="280dp"
                                       android:layout_marginTop="320dp"
                                       android:layout_marginLeft="15dp"
                                       android:layout_marginRight="15dp"
                                       app:cardCornerRadius="4dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Mahabaleshwar         Dist-120Km from pune"/>

        <ImageView android:layout_width="350dp" android:layout_height="250dp"
                   android:id="@+id/hill2"
                   android:src="@drawable/mhill"
                   android:layout_marginTop="40dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
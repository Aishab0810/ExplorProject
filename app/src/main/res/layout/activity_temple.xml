<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Temple"
>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/homee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/homebtn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="260dp"/>

    <ImageView
            android:id="@+id/log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="10dp"/>

    <ImageView
            android:id="@+id/location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lctn"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="10dp"/>

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/cafeg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/templeg"
            android:layout_marginTop="-380dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="List of the Temples"
              android:layout_marginTop="315dp"
              android:gravity="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/purple_700"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Bhimshakar temple, Maharashtra State Highway 112,\n Bhimashankar, Maharashtra 410509"
              android:layout_marginTop="340dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#FF6122"
              android:background="#D5CBCB"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Chaturshringi temple,Senapati Bapat Road,\n Near Pune University Rd, Gokhalenagar,\n Pune, Maharashtra 411016."
              android:layout_marginTop="420dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#FF6122"
              android:background="#D5CBCB"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Dagaduseth Halwai Ganapathi temple,\n Ganpati Bhavan, 250, Budhwar Peth, Pune, Maharashtra 411002."
              android:layout_marginTop="500dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#FF6122"
              android:background="#D5CBCB"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Neelkantheswar temple, Road Number 1,\n Kondhur, Maharashtra 412107, India."
              android:layout_marginTop="580dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#FF6122"
              android:background="#D5CBCB"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pataleshwar cave temple,\n Jangali Maharaj Road, Revenue Colony,\n Shivajinagar, Pune, Maharashtra, 411005, India."
              android:layout_marginTop="640dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#FF6122"
              android:background="#D5CBCB"
    />

</RelativeLayout>